.mobile-is-visible
	.main-navigation
		position fixed
		z-index 99
		right 0
		top 2rem
.main-navigation
	display flex
	#nav-wrap
		display none
	#mobile-nav-wrap
		position fixed
		right -100%
		width 100%
		z-index 99
		overflow-x hidden
		overflow-y hidden
		background-color rgba(0,0,0,0.85)
		-webkit-transition -webkit-transform 0s ease-out .5s
		transition -webkit-transform 0s ease-out .5s
		transition transform 0s ease-out .5s
		transition transform 0s ease-out .5s,-webkit-transform 0s ease-out .5s
		display grid
		grid-template-rows min-content 80px
		padding-top 6rem
		#mobile-menu
			display flex
			margin 0
			overflow-y auto
			ul
				width 100%
				display flex
				flex-direction column
				align-items center
				list-style none
				margin 0
				padding-left 0
				li
					width 100%
					display flex
					justify-content center
					align-items center
					a
						width 100%
						text-align center
						display block
						text-decoration none
						padding 1.5rem
						&:hover,
						&:focus
							background rgba(0,0,0,0.5)
				.current_page_item > a,
				.current-menu-item > a,
				.current_page_ancestor > a
					background rgba(0,0,0,0.2)
					ul
						box-shadow 0 3px 3px rgba(0, 0, 0, 0.5)
						float left
						position absolute
						top 1.5em
						left -999em
						z-index 99999
						ul
							left -999em
							top 0
						li
							&:hover > ul
							&.focus > ul
								left 100%
							a
								width 200px
							// uncomment next few lines to style the hover & focus states
							// :hover > a
							// .focus > a
							// a:hover
							// a.focus
		#social-menu
			position absolute
			bottom 0
			left 0
			right 0
			display flex
			justify-content center
			align-items center
			ul
				margin 0
				padding 0
				list-style none
				min-width 100vw
				min-height 5rem
				display grid
				grid-template-columns 1fr 1fr 1fr 1fr
				li
					display flex
					justify-content center
					align-items center
					a
						width: 100%;
						height: 100%;
						display: flex;
						justify-content: center;
						align-items: center;
						padding 0
						color #ffffff
						&:hover
							opacity 0.6
					[title="Twitter"]
						a
							background-color $color__social_twitter
					[title="Instagram"]
						a
							background-color $color__social_instagram
					[title="LinkedIn"]
						a
							background-color $color__social_linkedin
					[title="Dribbble"]
						a
							background-color $color__social_dribbble

	// Mobile menu toggle ------------------------
	.menu-toggle
		display flex
		justify-content center
		align-items center
		padding 0 2rem
		cursor pointer
		z-index 9999
		position absolute
		top 4em
		right .75em
		.icon-small-size
			display: block;
			fill: none;
			stroke: #404040;
			stroke-linecap: round;
			stroke-linejoin: round;
			stroke-miterlimit: 10;
			margin: auto;
			overflow: visible;
			width: 2rem;
			height: 2rem;
			path
				transition: .4s all ease-out
			#top-line,
			#bottom-line
				-webkit-transform rotate(0deg) translate3d(0,0,0)
				transform rotate(0deg) translate3d(0,0,0)
				-webkit-transition -webkit-transform .2s ease-in
				transition -webkit-transform .2s ease-in
				transition transform .2s ease-in
				transition transform .2s ease-in,-webkit-transform .2s ease-in
			#middle-line
				-webkit-transition opacity .2s ease-in
				transition opacity .2s ease-in
		&.active
			top 40px
			line
				stroke #ffffff
				transition .4s all ease-out
			#top-line
				-webkit-transform rotate(-45deg) translate3d(-6px,8px,0)
				transform rotate(-45deg) translate3d(-6px,9px,0)
			#bottom-line
				-webkit-transform rotate(45deg) translate3d(2px,-13px,0)
				transform rotate(45deg) translate3d(1px,-12px,0)
			#middle-line
				opacity 0
			&:hover
				line
				stroke #fff
			/ ~ .site-branding
				color #ffffff

+widerThan($tabletLG)
	.main-navigation
		.menu-toggle
			display none
		#mobile-nav-wrap
			right -100%!important
		#nav-wrap
			display flex
			right 0
			width 100%
			background-color transparent
			padding 0
			#primary-menu
				margin 0 0 0 2rem
				display flex
				align-items stretch
				ul
					display flex
					flex-direction row
					list-style none
					margin 0
					padding 0
					li
						display flex
						align-items center
						a
							&:hover,
							&:focus
								background rgba(0,0,0,0.1)
						a
							display flex
							align-items center
							text-decoration none
							padding .75rem 1.75rem
							border-radius 100px
					.current_page_item,
					.current-menu-item,
					.current_page_ancestor
						a
							background rgba(0,0,0,0.1)
							&:hover
								background rgba(0,0,0,0.2)
			#social-menu
				position relative
				display flex
				ul
					margin 0
					padding 0
					display flex
					list-style none
					li
						display flex
						justify-content center
						align-items center
						a
							display flex
							justify-content center
							align-items center
							margin-right 6px
							width 48px
							height 48px
							border-radius 50%
						&:first-child
							a
								margin-left 6px
						&:last-child
							margin-right 0
							a
								margin-right 0
						[title=Twitter]
							&:hover
								color #ffffff
								background $color__social_twitter
						[title=Instagram]
							&:hover
								color #ffffff
								background $color__social_instagram
						[title=LinkedIn]
							&:hover
								color #ffffff
								background $color__social_linkedin
						[title=Dribbble]
							&:hover
								color #ffffff
								background $color__social_dribbble

.comment-navigation,
.posts-navigation,
.post-navigation
	display flex
	.site-main &
		margin 0 0 1.5em
		overflow hidden
	& .nav-previous
		justify-self flex-start
		width 50%
	& .nav-next
		justify-self flex-end
		text-align right
		width 50%